<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9時30分"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/schedule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新宿集合"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/schedule_comment"
        android:layout_alignEnd="@+id/schedule_comment" />

    <TextView
        android:id="@+id/schedule_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="時間厳守！"
        android:textSize="10sp"
        android:layout_below="@+id/schedule_title"
        android:layout_toRightOf="@+id/schedule_time"
        android:layout_toEndOf="@+id/schedule_time"
        android:layout_marginLeft="74dp"
        android:layout_marginStart="74dp" />


</RelativeLayout>
